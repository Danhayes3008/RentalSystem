@model IEnumerable<RentalSystem.Models.Genre>
@using RentalSystem.Models
@{
    ViewBag.Title = "Index";
}

<h2>Genre</h2>
@Html.Partial("_CreateButtonPartial")

<br />

<table class="table table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(m=>m.Name)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m=>item.Name)
                    </td>
                    <td>
                        @Html.Partial("_TableButtonPartial", new IndevidualButtonPartial { GenreId = item.Id})
                    </td>
                </tr>
            }
</table>